rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Contacts collection rules
    match /contacts/{contactId} {
      // Allow anyone to create new contacts (for the contact form submission)
      allow create: if true;
      
      // Allow reading, updating, and deleting contacts
      // NOTE: In production, you should implement proper Firebase Authentication
      // and restrict these operations to authenticated admin users only
      allow read, update, delete: if true;
    }

    // Bookings collection rules
    match /bookings/{bookingId} {
      // Allow anyone to create new bookings (for the booking form submission)
      allow create: if true;
      
      // Allow reading, updating, and deleting bookings
      // NOTE: In production, you should implement proper Firebase Authentication
      // and restrict these operations to authenticated admin users only
      allow read, update, delete: if true;
    }
  }
}
